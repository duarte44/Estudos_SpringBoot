package com.project.first.project.controllers;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.project.first.project.entities.User;
import com.project.first.project.services.UsersServices;

@RestController /* DECLARA QUE VAI SER UM CONTROLADOR (VAI FAZER REQUISIÇÕES CRUD) */
@RequestMapping(value = "/users") /* CAMINHO QUE VAI RESPONDER */
public class UserController {

	private UsersServices services;	
	
	@GetMapping(value = "/{id}")
	public User find(@PathVariable Long id) {
		return services.find(id);
	}
	
	public List<User> findAll(@PathVariable Long id){
		return services.findAll();
	}
	
	
	

}
